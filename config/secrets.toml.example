[server]
wss_url = "wss://ws-subscriptions-clob.polymarket.com/ws/market"
rest_url = "https://clob.polymarket.com"
gamma_url = "https://gamma-api.polymarket.com"
polygon_rpc_url = "YOUR_QUICKNODE_PRO_URL_HERE"

[credentials]
private_key = "YOUR_0X_PREFIXED_PRIVATE_KEY_HERE"
api_key = "YOUR_POLYMARKET_API_KEY"
api_secret = "YOUR_POLYMARKET_API_SECRET_BASE64"
api_passphrase = "YOUR_POLYMARKET_API_PASSPHRASE"
funder_address = "YOUR_PROXY_WALLET_ADDRESS"
signature_type = 2  # Change to 1 if using MagicLink, 2 for MetaMask/Gnosis

[alerts]
enable_telegram = true
telegram_bot_token = "YOUR_TELEGRAM_BOT_TOKEN"
telegram_chat_id = "YOUR_TELEGRAM_CHAT_ID"
